{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Local REST schema demo body",
  "type": "object",
  "properties": {
    "event": {
      "type": "string",
      "description": "Logical event identifier"
    },
    "message": {
      "type": "string",
