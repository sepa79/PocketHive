{
  "name": "pockethive-vscode",
  "displayName": "PocketHive",
  "description": "Basic PocketHive commands for the Orchestrator API.",
  "version": "0.0.7",
  "publisher": "pockethive",
  "license": "GPL-3.0-only",
  "repository": {
    "type": "git",
    "url": "https://github.com/sepa79/PocketHive.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:pockethive.addHiveUrl",
    "onCommand:pockethive.setActiveHiveUrl",
    "onCommand:pockethive.removeHiveUrl",
    "onCommand:pockethive.listSwarms",
    "onCommand:pockethive.startSwarm",
    "onCommand:pockethive.stopSwarm",
    "onCommand:pockethive.removeSwarm",
    "onCommand:pockethive.startAllSwarms",
    "onCommand:pockethive.stopAllSwarms",
    "onCommand:pockethive.openUi",
    "onCommand:pockethive.openScenarioFile",
    "onCommand:pockethive.filterBuzz",
    "onCommand:pockethive.filterJournal",
    "onCommand:pockethive.helpSettings",
    "onCommand:pockethive.helpHive",
    "onCommand:pockethive.helpBuzz",
    "onCommand:pockethive.helpJournal",
    "onCommand:pockethive.helpScenario",
    "onView:pockethive.settings",
    "onView:pockethive.hive",
    "onView:pockethive.buzz",
    "onView:pockethive.journal",
    "onView:pockethive.scenario",
    "onCustomEditor:pockethive.scenarioEditor"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "pockethive",
          "title": "PocketHive",
          "icon": "resources/hive.svg"
        }
      ]
    },
    "views": {
      "pockethive": [
        {
          "id": "pockethive.hive",
          "name": "Hive"
        },
        {
          "id": "pockethive.buzz",
          "name": "Buzz"
        },
        {
          "id": "pockethive.journal",
          "name": "Journal"
        },
        {
          "id": "pockethive.scenario",
          "name": "Scenario"
        },
        {
          "id": "pockethive.settings",
          "name": "Settings"
        }
      ]
    },
    "customEditors": [
      {
        "viewType": "pockethive.scenarioEditor",
        "displayName": "PocketHive Scenario",
        "selector": [
          {
            "scheme": "pockethive-scenario",
            "filenamePattern": "**/scenario.yaml"
          },
          {
            "scheme": "pockethive-scenario",
            "filenamePattern": "**/scenario.yml"
          }
        ],
        "priority": "default"
      }
    ],
    "commands": [
      {
        "command": "pockethive.addHiveUrl",
        "title": "Add Hive URL",
        "category": "PocketHive",
        "icon": "$(add)"
      },
      {
        "command": "pockethive.setActiveHiveUrl",
        "title": "Use Hive URL",
        "category": "PocketHive"
      },
      {
        "command": "pockethive.removeHiveUrl",
        "title": "Delete Hive URL",
        "category": "PocketHive",
        "icon": "$(trash)"
      },
      {
        "command": "pockethive.listSwarms",
        "title": "List swarms",
        "category": "PocketHive"
      },
      {
        "command": "pockethive.startAllSwarms",
        "title": "Start all swarms",
        "category": "PocketHive",
        "icon": "$(play)"
      },
      {
        "command": "pockethive.stopAllSwarms",
        "title": "Stop all swarms",
        "category": "PocketHive",
        "icon": "$(debug-stop)"
      },
      {
        "command": "pockethive.openSwarmDetails",
        "title": "Open swarm details",
        "category": "PocketHive"
      },
      {
        "command": "pockethive.startSwarm",
        "title": "Start swarm",
        "category": "PocketHive"
      },
      {
        "command": "pockethive.stopSwarm",
        "title": "Stop swarm",
        "category": "PocketHive"
      },
      {
        "command": "pockethive.removeSwarm",
        "title": "Remove swarm",
        "category": "PocketHive"
      },
      {
        "command": "pockethive.openUi",
        "title": "Open UI",
        "category": "PocketHive"
      },
      {
        "command": "pockethive.openScenarioRaw",
        "title": "Open scenario",
        "category": "PocketHive"
      },
      {
        "command": "pockethive.openScenarioFile",
        "title": "Open scenario file",
        "category": "PocketHive"
      },
      {
        "command": "pockethive.previewScenario",
        "title": "Preview scenario",
        "category": "PocketHive"
      },
      {
        "command": "pockethive.showEntry",
        "title": "Show entry",
        "category": "PocketHive"
      },
      {
        "command": "pockethive.refreshHive",
        "title": "Refresh Hive",
        "category": "PocketHive"
      },
      {
        "command": "pockethive.refreshBuzz",
        "title": "Refresh Buzz",
        "category": "PocketHive"
      },
      {
        "command": "pockethive.refreshJournal",
        "title": "Refresh Journal",
        "category": "PocketHive"
      },
      {
        "command": "pockethive.refreshScenario",
        "title": "Refresh Scenario",
        "category": "PocketHive"
      },
      {
        "command": "pockethive.filterBuzz",
        "title": "Filter Buzz",
        "category": "PocketHive",
        "icon": "$(filter)"
      },
      {
        "command": "pockethive.filterJournal",
        "title": "Filter Journal",
        "category": "PocketHive",
        "icon": "$(filter)"
      },
      {
        "command": "pockethive.helpHive",
        "title": "Help: Hive",
        "category": "PocketHive",
        "icon": "$(question)"
      },
      {
        "command": "pockethive.helpBuzz",
        "title": "Help: Buzz",
        "category": "PocketHive",
        "icon": "$(question)"
      },
      {
        "command": "pockethive.helpJournal",
        "title": "Help: Journal",
        "category": "PocketHive",
        "icon": "$(question)"
      },
      {
        "command": "pockethive.helpScenario",
        "title": "Help: Scenario",
        "category": "PocketHive",
        "icon": "$(question)"
      },
      {
        "command": "pockethive.helpSettings",
        "title": "Help: Settings",
        "category": "PocketHive",
        "icon": "$(question)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "pockethive.helpHive",
          "when": "view == pockethive.hive",
          "group": "navigation"
        },
        {
          "command": "pockethive.startAllSwarms",
          "when": "view == pockethive.hive",
          "group": "navigation"
        },
        {
          "command": "pockethive.stopAllSwarms",
          "when": "view == pockethive.hive",
          "group": "navigation"
        },
        {
          "command": "pockethive.openUi",
          "when": "view == pockethive.hive",
          "group": "navigation"
        },
        {
          "command": "pockethive.helpBuzz",
          "when": "view == pockethive.buzz",
          "group": "navigation"
        },
        {
          "command": "pockethive.helpJournal",
          "when": "view == pockethive.journal",
          "group": "navigation"
        },
        {
          "command": "pockethive.helpScenario",
          "when": "view == pockethive.scenario",
          "group": "navigation"
        },
        {
          "command": "pockethive.helpSettings",
          "when": "view == pockethive.settings",
          "group": "navigation"
        },
        {
          "command": "pockethive.refreshHive",
          "when": "view == pockethive.hive",
          "group": "navigation"
        },
        {
          "command": "pockethive.refreshBuzz",
          "when": "view == pockethive.buzz",
          "group": "navigation"
        },
        {
          "command": "pockethive.refreshJournal",
          "when": "view == pockethive.journal",
          "group": "navigation"
        },
        {
          "command": "pockethive.refreshScenario",
          "when": "view == pockethive.scenario",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "pockethive.previewScenario",
          "when": "view == pockethive.scenario && viewItem == scenarioItem",
          "group": "navigation"
        },
        {
          "command": "pockethive.setActiveHiveUrl",
          "when": "view == pockethive.settings && viewItem == hiveInstance",
          "group": "inline"
        },
        {
          "command": "pockethive.removeHiveUrl",
          "when": "view == pockethive.settings && viewItem == hiveInstance",
          "group": "inline"
        },
        {
          "command": "pockethive.removeHiveUrl",
          "when": "view == pockethive.settings && viewItem == hiveInstanceActive",
          "group": "inline"
        },
        {
          "command": "pockethive.startSwarm",
          "when": "view == pockethive.hive && viewItem == swarmItem",
          "group": "inline"
        },
        {
          "command": "pockethive.stopSwarm",
          "when": "view == pockethive.hive && viewItem == swarmItem",
          "group": "inline"
        },
        {
          "command": "pockethive.removeSwarm",
          "when": "view == pockethive.hive && viewItem == swarmItem",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "title": "PocketHive",
      "properties": {
        "pockethive.hiveUrls": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "List of Hive base URLs (reverse proxy root), e.g. http://localhost:8088"
        },
        "pockethive.activeHiveUrl": {
          "type": "string",
          "default": "",
          "description": "Active Hive base URL from the list."
        },
        "pockethive.authToken": {
          "type": "string",
          "description": "Bearer token for Orchestrator API (optional)."
        }
      }
    }
  },
  "scripts": {
    "build": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "vscode:prepublish": "npm run build"
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "2.24.0",
    "typescript": "^5.4.5"
  },
  "overrides": {
    "cheerio": "1.0.0-rc.12"
  },
  "dependencies": {
    "yaml": "^2.4.5"
  }
}
